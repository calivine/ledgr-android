<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ptHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="12dp"
        tools:text="@string/notifications"

        app:layout_constraintEnd_toStartOf="@id/icExpand"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/icExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:src="@drawable/ic_baseline_keyboard_arrow_up_48"
        app:layout_constraintStart_toEndOf="@id/ptHeader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/new_spending_notification"/>

</androidx.constraintlayout.widget.ConstraintLayout>