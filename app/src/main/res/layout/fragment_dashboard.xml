<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DashboardFragment">

    <include
        android:id="@+id/budget_progress_bar_container"
        layout="@layout/budget_progress_bar" />



    <include layout="@layout/notification_card" />

    <View
        android:id="@+id/budget_list_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="32dp"
        android:background="@drawable/divider_space"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/new_spending_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/budget_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:background="?attr/colorSurface"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/budget_list_header"

        />


</androidx.constraintlayout.widget.ConstraintLayout>