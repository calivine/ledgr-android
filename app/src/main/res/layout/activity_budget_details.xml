<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.budget.BudgetDetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/budget_details_category"
        android:textSize="32sp" />
    
    <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        app:layout_constraintTop_toBottomOf="@id/budget_details_category"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/details_chart" >

    </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_chart"
        android:id="@+id/budget_details_list"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="75dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="24.0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>