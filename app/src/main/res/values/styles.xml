<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/ledgrPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:font">@font/fira_sans_medium</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/ledgrPrimary</item>
        <item name="colorOnPrimary">@color/ledgrPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="NumberPad" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="NumberPadButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">28sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">13dp</item>
    </style>

    <style name="NumberDisplay" parent="Base.Widget.AppCompat.TextView">
        <item name="android:textSize">80sp</item>
        <item name="android:textColor">@color/active</item>
    </style>

    <style name="ListItem" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TransactionListItem" parent="ListItem">
        <item name="android:layout_marginHorizontal">18dp</item>
    </style>

    <style name="TransactionListItem.Secondary" parent="TransactionListItem">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BudgetListItem" parent="ListItem">
        <item name="android:layout_marginHorizontal">18dp</item>
    </style>

    <style name="BudgetProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/ledgrPrimary</item>
        <item name="android:layout_marginHorizontal">25dp</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>
