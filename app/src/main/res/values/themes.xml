<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/ledgrPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/white</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:font">@font/fira_sans_medium</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode_transition</item>


    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:actionBarStyle">@style/Widget.AppTheme.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowExitTransition">@transition/explode_transition</item>
    </style>

    <style name="ThemeOverlay.Ledgr.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/ledgrPrimary</item>
        <item name="fullscreenTextColor">@color/black</item>
    </style>
</resources>