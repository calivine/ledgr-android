<resources>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ledgr_primary</item>
        <item name="colorPrimaryDark">@color/ledgr_primary</item>
        <item name="colorPrimaryVariant">@color/ledgr_primary_dark</item>

        <item name="colorSecondary">@color/ledgr_secondary</item>
        <item name="colorSecondaryVariant">@color/ledgr_secondary</item>

        <item name="android:colorBackground">@color/blue_grey_50</item>
        <item name="colorAccent">@color/material_accent_red</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorBar">@color/light_grey_200</item>
        <item name="colorIcon">@color/black</item>

        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryVariant">@color/grey_600</item>
        <item name="colorOnSurface">@color/grey_900</item>
        <item name="colorOnSurfaceVariant">@color/secondary</item>
        <item name="colorOnBackground">@color/grey_900</item>
        <item name="colorOnBar">@color/black</item>

        <item name="android:statusBarColor">@color/ledgr_primary</item>
        <item name="android:navigationBarColor">@color/ledgr_primary</item>
        <!--
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/fade_transition</item>
        -->
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>


    <style name="AppTheme.Secondary" parent="AppTheme" >
        <item name="colorPrimary">@color/ledgr_secondary</item>
        <item name="colorPrimaryDark">@color/ledgr_secondary</item>
        <item name="colorPrimaryVariant">@color/ledgr_secondary</item>
        <item name="colorControlActivated">@color/ledgr_secondary</item>
        <item name="colorSecondary">@color/ledgr_primary</item>
        <item name="colorSecondaryVariant">@color/ledgr_primary_dark</item>
        <item name="colorBar">@color/light_grey_200</item>
        <item name="colorIcon">@color/ledgr_secondary</item>
        <item name="android:statusBarColor">@color/ledgr_secondary</item>
        <item name="android:navigationBarColor">@color/ledgr_secondary</item>
    </style>

    <style name="AppTheme.Red" parent="AppTheme">
        <item name="colorPrimary">@color/red_800</item>
        <item name="colorPrimaryDark">@color/red_900</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorIcon">@color/teal_500</item>
        <item name="android:statusBarColor">@color/red_800</item>
        <item name="android:navigationBarColor">@color/red_800</item>
    </style>

    <style name="AppTheme.Yellow" parent="AppTheme">
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryDark">@color/yellow_700</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorIcon">@color/blue_500</item>
        <item name="android:statusBarColor">@color/yellow_700</item>
        <item name="android:navigationBarColor">@color/yellow_700</item>

        <item name="colorOnSecondaryVariant">@color/white</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorPrimary">@color/ledgr_primary</item>
        <!--
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowExitTransition">@transition/explode_transition</item>
        -->
    </style>

    <style name="ThemeOverlay.Ledgr.FullscreenContainer" parent="AppTheme.Fullscreen">
        <item name="fullscreenBackgroundColor">@color/ledgr_primary</item>
        <item name="fullscreenTextColor">@color/black</item>
    </style>
</resources>