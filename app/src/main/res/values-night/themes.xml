<resources>



    <style name="ThemeOverlay.Ledgr.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="fullscreenTextColor">@color/ledgr_primary</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:colorBackground">@color/grey_900</item>
        <item name="colorAccent">@color/material_accent_red</item>
        <item name="colorSurface">@color/blue_grey_700</item>
        <item name="colorPrimary">@color/ledgr_primary_dark</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/ledgr_primary_dark</item>

        <item name="colorBar">@color/light_blue_900</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryVariant">@color/grey_400</item>
        <item name="colorOnSurface">@color/light_grey_200</item>
        <item name="colorOnSurfaceVariant">@color/grey_300</item>
        <item name="colorOnBackground">@color/grey_400</item>

        <item name="colorIcon">@color/ledgr_primary_dark</item>


        <item name="colorOnBar">@color/black</item>
    </style>

    <style name="AppTheme.Purple" parent="AppTheme">
        <item name="colorIcon">@color/green_500</item>
        <item name="colorPrimary">@color/green_500_light</item>
        <item name="colorSecondary">@color/green_500_dark</item>
        <item name="colorPrimaryDark">@color/green_500_dark</item>

        <item name="android:statusBarColor">@color/purple_700_dark</item>
        <item name="android:navigationBarColor">@color/purple_700_dark</item>
    </style>
</resources>